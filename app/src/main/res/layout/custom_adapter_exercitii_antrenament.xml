<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvExerciseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exercise Name"
            android:textColor="@color/brandeisblue"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvEquipment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(Equipment)"
            android:textColor="@color/brandeisblue"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/layoutSets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">
        </LinearLayout>

        <Button
            android:id="@+id/btnAddSet"
            style="@style/CustomButtonAlbastru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+ Add Set" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnRemoveExercise"
        android:layout_width="26dp"
        android:layout_height="30dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/delete_svgrepo_com" />
</LinearLayout>
